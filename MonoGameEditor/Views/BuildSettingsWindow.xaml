<Window x:Class="MonoGameEditor.Views.BuildSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MonoGameEditor.ViewModels"
        Title="Build Settings" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#2D2D30" Foreground="White">
    
    <Window.Resources>
        <Style x:Key="FlatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="SCENES IN BUILD" FontSize="14" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ListBox x:Name="ScenesListBox" ItemsSource="{Binding Scenes}" Background="#1E1E1E" BorderBrush="#3F3F46" Foreground="White">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“„" Margin="0,0,10,0" Opacity="0.5"/>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Path}" Foreground="#666666" Margin="10,0,0,0" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="10,5"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <Button Content="Add Open Scenes" Command="{Binding AddCurrentSceneCommand}" Style="{StaticResource FlatButtonStyle}"/>
                <Separator Background="Transparent" Height="10"/>
                <Button Content="Remove" Command="{Binding RemoveSceneCommand}" CommandParameter="{Binding SelectedItem, ElementName=ScenesListBox}" Style="{StaticResource FlatButtonStyle}"/>
                <Separator Background="Transparent" Height="10"/>
                <Button Content="Move Up" Command="{Binding MoveUpCommand}" CommandParameter="{Binding SelectedItem, ElementName=ScenesListBox}" Style="{StaticResource FlatButtonStyle}"/>
                <Button Content="Move Down" Command="{Binding MoveDownCommand}" CommandParameter="{Binding SelectedItem, ElementName=ScenesListBox}" Style="{StaticResource FlatButtonStyle}"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Player Settings..." Margin="0,0,10,0" Padding="15,5" Background="Transparent" BorderBrush="#007ACC" Foreground="#007ACC" Cursor="Hand" Click="OnPlayerSettingsClick"/>
            <Button Content="Build" Command="{Binding BuildCommand}" Width="100" Padding="15,5" Background="#007ACC" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
            <Button Content="Build and Run" Width="120" Margin="10,0,0,0" Padding="15,5" Background="#007ACC" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
