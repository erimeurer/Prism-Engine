                                        <Setter Property="Background" Value="#F59E0B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.ToolTip>
                            <TextBlock>
                                <Run Text="Compile .fx shader to .mgfxo format"/><LineBreak/>
                                <Run Text="Requires mgfxc tool in PATH" FontStyle="Italic" Foreground="Gray"/>
                            </TextBlock>
                        </Button.ToolTip>
                    </Button>
                    
                    <!-- Dynamic Shader Properties -->
                    <ItemsControl x:Name="ShaderPropsControl" ItemsSource="{Binding ShaderProperties}" 
                                  Tag="{Binding DataContext, RelativeSource={RelativeSource Self}}" Margin="0,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Property Name -->
                                    <TextBlock Text="{Binding Name}" Foreground="Gray" VerticalAlignment="Center"/>
                                    
                                    <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                        <Grid.Resources>
                                            <Style x:Key="VisibleIfFloat" TargetType="FrameworkElement">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="{x:Static shaders:ShaderPropertyType.Float}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                            
                                            <Style x:Key="VisibleIfVector2" TargetType="FrameworkElement">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="{x:Static shaders:ShaderPropertyType.Vector2}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                            
                                            <Style x:Key="VisibleIfVector3" TargetType="FrameworkElement">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="{x:Static shaders:ShaderPropertyType.Vector3}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                            
                                            <Style x:Key="VisibleIfColor" TargetType="FrameworkElement">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="{x:Static shaders:ShaderPropertyType.Color}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                            
                                            <Style x:Key="VisibleIfBool" TargetType="FrameworkElement">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="{x:Static shaders:ShaderPropertyType.Bool}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                            
                                            <Style x:Key="VisibleIfTexture" TargetType="FrameworkElement">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="{x:Static shaders:ShaderPropertyType.Texture2D}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Resources>

                                        <!-- FLOAT CONTROL -->
                                        <Slider Style="{StaticResource VisibleIfFloat}"
                                                Value="{Binding FloatValue}" Minimum="0" Maximum="1" 
                                                ToolTip="{Binding FloatValue}"/>

                                        <!-- VECTOR2 CONTROL -->
                                        <TextBox Style="{StaticResource VisibleIfVector2}"
                                                 Text="{Binding Vector2Value, UpdateSourceTrigger=PropertyChanged}" 
                                                 Background="#333337" Foreground="#DDDDDD" 
                                                 BorderBrush="#555555" BorderThickness="1" Padding="5"
                                                 ToolTip="X, Y"/>

                                        <!-- VECTOR3 CONTROL -->
                                        <TextBox Style="{StaticResource VisibleIfVector3}"
                                                 Text="{Binding Vector3Value, UpdateSourceTrigger=PropertyChanged}" 
                                                 Background="#333337" Foreground="#DDDDDD" 
                                                 BorderBrush="#555555" BorderThickness="1" Padding="5"
                                                 ToolTip="X, Y, Z"/>

                                        <!-- COLOR CONTROL -->
                                        <Button Style="{StaticResource VisibleIfColor}"
                                                Width="80" Height="25" HorizontalAlignment="Left" 
                                                Command="{Binding PickColorCommand}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="ColorBorder" BorderBrush="#555555" BorderThickness="1" CornerRadius="3">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="{Binding ColorValue}"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ColorBorder" Property="BorderBrush" Value="#777777"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <!-- BOOL CONTROL -->
                                        <CheckBox Style="{StaticResource VisibleIfBool}"
                                                  IsChecked="{Binding BoolValue}" VerticalAlignment="Center"/>

                                        <!-- TEXTURE CONTROL -->
                                        <Grid Style="{StaticResource VisibleIfTexture}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Text="{Binding TextureValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                     Background="#333337" Foreground="#DDDDDD" 
                                                     BorderBrush="#555555" BorderThickness="1" Padding="5"
                                                     ToolTip="Path to texture" IsReadOnly="True"/>
                                            <Button Grid.Column="1" Content="..." Width="30" 
                                                    Command="{Binding Tag.SelectTextureCommand, ElementName=ShaderPropsControl}"
                                                    CommandParameter="{Binding Name}"
                                                    Background="#0E639C" Foreground="White" 
                                                    Padding="5,4" Margin="2,0,0,0" BorderThickness="0" Cursor="Hand"
                                                    ToolTip="Browse for texture"/>
                                        </Grid>
                                                 
                                        <!-- DEBUG FALLBACK FOR UNKNOWN -->
                                        <!-- Optional: You can add a textblock that is visible only if NONE of the above match, 
                                             but simpler to assume one matches based on previous evidence -->
                                    </Grid>

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Separator before Save button -->
                    <Separator Background="#3E3E3E" Margin="0,15"/>
                    
                    <!-- Save Button -->
                    <Button Content="Save Material" Command="{Binding SaveMaterialCommand}" 
                            Background="#0E639C" Foreground="White" Padding="10,5" 
                            BorderThickness="0" Cursor="Hand" Margin="0,10,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1177BB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Background="#252526">
        <!-- Content Area - Show MaterialEditor if available, otherwise SelectedObject -->
        <ContentControl Content="{Binding MaterialEditor}" 
                        Visibility="{Binding MaterialEditor, Converter={StaticResource NullToVisibilityConverter}}"/>
        
        <ContentControl Content="{Binding SelectedObject}" 
                        Visibility="{Binding MaterialEditor, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
        
        <!-- Show when nothing selected -->
        <TextBlock Text="Select an object or asset to inspect" Foreground="#666666" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic"
                   Visibility="{Binding SelectedObject, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
    </Grid>
</UserControl>
