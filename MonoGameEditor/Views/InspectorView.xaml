<UserControl x:Class="MonoGameEditor.Views.InspectorView"
             x:Name="InspectorRoot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MonoGameEditor.Views"
             xmlns:core="clr-namespace:MonoGameEditor.Core"
             xmlns:components="clr-namespace:MonoGameEditor.Core.Components"
             xmlns:vm="clr-namespace:MonoGameEditor.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:shaders="clr-namespace:MonoGameEditor.Core.Shaders"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="320">
    <UserControl.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:XnaColorToWpfColorConverter x:Key="XnaColorToWpfColorConverter"/>
        <local:FilePathToNameConverter x:Key="FilePathToNameConverter"/>
        
        <ObjectDataProvider x:Key="ShadowQualityEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="components:ShadowQuality"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="CapsuleDirectionEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="components:CapsuleDirection"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        
        <!-- TextBox Style -->
        <Style x:Key="NumericTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Axis Label Style (X, Y, Z) -->
        <Style x:Key="AxisLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="14"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="SizeWE"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="NumericLabel_PreviewMouseLeftButtonDown"/>
            <EventSetter Event="PreviewMouseMove" Handler="NumericLabel_PreviewMouseMove"/>
            <EventSetter Event="PreviewMouseLeftButtonUp" Handler="NumericLabel_PreviewMouseLeftButtonUp"/>
        </Style>

        <!-- Generic Numeric Label Style -->
        <Style x:Key="NumericLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="SizeWE"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="NumericLabel_PreviewMouseLeftButtonDown"/>
            <EventSetter Event="PreviewMouseMove" Handler="NumericLabel_PreviewMouseMove"/>
            <EventSetter Event="PreviewMouseLeftButtonUp" Handler="NumericLabel_PreviewMouseLeftButtonUp"/>
        </Style>
        
        <!-- Property Row Style -->
        <Style x:Key="PropertyRow" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <!-- File Inspector Template -->
        <DataTemplate DataType="{x:Type vm:FileItemViewModel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                 <StackPanel Margin="5">
                     <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                         <!-- Big Icon / Thumbnail -->
                         <Border Width="64" Height="64" Background="#333333" CornerRadius="4" Margin="0,0,10,0">
                             <Image Source="{Binding Thumbnail}" Stretch="Uniform" /> 
                             <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Thumbnail}" Value="{x:Null}">
                                            <Setter Property="Background" Value="#444444"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                             </Border.Style>
                         </Border>
                         
                         <StackPanel VerticalAlignment="Center">
                             <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="White" TextTrimming="CharacterEllipsis"/>
                             <TextBlock Text="{Binding InfoText}" Foreground="Gray" Margin="0,2,0,0"/>
                         </StackPanel>
                     </StackPanel>

                     <Separator Background="#3E3E3E" Margin="0,5,0,10"/>

                     <!-- File Properties -->
                     <Grid Margin="0,5">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="100"/>
                             <ColumnDefinition Width="*"/>
                         </Grid.ColumnDefinitions>
                         <TextBlock Text="Full Path" Foreground="Gray"/>
                         <TextBox Grid.Column="1" Text="{Binding FullPath, Mode=OneWay}" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" TextWrapping="Wrap"/>
                     </Grid>

                     <!-- 3D Metadata Section -->
                     <StackPanel Visibility="{Binding Metadata, Converter={StaticResource NullToVisibilityConverter}}">
                         <TextBlock Text="Model Statistics" FontWeight="Bold" Foreground="White" Margin="0,10,0,5"/>
                         
                         <Grid Margin="0,2">
                             <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="100"/>
                                 <ColumnDefinition Width="*"/>
                             </Grid.ColumnDefinitions>
                             <TextBlock Text="Vertices" Foreground="Gray"/>
                             <TextBlock Grid.Column="1" Text="{Binding Metadata.VertexCount}" Foreground="White"/>
                         </Grid>
                         <Grid Margin="0,2">
                             <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="100"/>
                                 <ColumnDefinition Width="*"/>
                             </Grid.ColumnDefinitions>
                             <TextBlock Text="Triangles" Foreground="Gray"/>
                             <TextBlock Grid.Column="1" Text="{Binding Metadata.TriangleCount}" Foreground="White"/>
                         </Grid>
                          <Grid Margin="0,2">
                             <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="100"/>
                                 <ColumnDefinition Width="*"/>
                             </Grid.ColumnDefinitions>
                             <TextBlock Text="Materials" Foreground="Gray"/>
                             <TextBlock Grid.Column="1" Text="{Binding Metadata.MaterialCount}" Foreground="White"/>
                         </Grid>
                          <Grid Margin="0,2">
                             <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="100"/>
                                 <ColumnDefinition Width="*"/>
                             </Grid.ColumnDefinitions>
                             <TextBlock Text="Dimensions" Foreground="Gray"/>
                             <TextBlock Grid.Column="1" Text="{Binding Metadata.Dimensions}" Foreground="White"/>
                         </Grid>
                         
                         <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Border Background="#2D2D30" Padding="5" CornerRadius="3" Margin="0,0,5,0" Visibility="{Binding Metadata.HasNormals, Converter={StaticResource NullToVisibilityConverter}}"> <!-- Assuming Bool converter works or NullToVis works if mapped -->
                                <!-- Actually need Bool To Vis. I'll assume I have one or add one. Existing is NullToVisibilityConverter. -->
                                <TextBlock Text="Normals" Foreground="#88CC88" FontSize="10"/>
                            </Border>
                             <Border Background="#2D2D30" Padding="5" CornerRadius="3" Visibility="{Binding Metadata.HasUVs, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="UVs" Foreground="#88CC88" FontSize="10"/>
                            </Border>
                         </StackPanel>
                     </StackPanel>
                 </StackPanel>
            </ScrollViewer>
        </DataTemplate>

        <!-- CameraComponent DataTemplate -->
        <DataTemplate DataType="{x:Type components:CameraComponent}">
            <Expander IsExpanded="{Binding IsUIExpanded, Mode=TwoWay}" Margin="0,0,0,4">
                <Expander.Header>
                    <Grid Background="Transparent" PreviewMouseLeftButtonDown="ComponentHeader_DragSource_PreviewMouseLeftButtonDown" MouseMove="ComponentHeader_DragSource_MouseMove">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Camera" Foreground="#CCCCCC" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="✕" FontSize="10" Width="18" Height="18"
                                Background="Transparent" BorderThickness="0" Foreground="#888888"
                                ToolTip="Remove Component" Click="RemoveComponent_Click" Tag="{Binding}"/>
                    </Grid>
                </Expander.Header>
                <Border Background="#2D2D30" CornerRadius="0,0,3,3" Padding="8" Margin="0,4,0,0">
                    <StackPanel>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Clear Flags" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" SelectedItem="{Binding ClearFlags}" 
                                      ItemsSource="{Binding Source={local:EnumValues {x:Type components:CameraClearFlags}}}"
                                      Background="#333337" Foreground="White" Width="100"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Background" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Height="20" Margin="0" BorderThickness="1" BorderBrush="#555555"
                                    Click="PickColor_Click" Tag="{Binding}" ToolTip="Click to pick color">
                                <Button.Background>
                                    <SolidColorBrush Color="{Binding BackgroundColor, Mode=OneWay, Converter={StaticResource XnaColorToWpfColorConverter}}"/>
                                </Button.Background>
                            </Button>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Field of View" Style="{StaticResource NumericLabel}" Tag="{Binding ElementName=CamFovTb}"/>
                            <TextBox x:Name="CamFovTb" Grid.Column="1" Text="{Binding FieldOfView, StringFormat={}{0:F1}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Near Clip" Style="{StaticResource NumericLabel}" Tag="{Binding ElementName=CamNearTb}"/>
                            <TextBox x:Name="CamNearTb" Grid.Column="1" Text="{Binding NearClip, StringFormat={}{0:F2}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Far Clip" Style="{StaticResource NumericLabel}" Tag="{Binding ElementName=CamFarTb}"/>
                            <TextBox x:Name="CamFarTb" Grid.Column="1" Text="{Binding FarClip, StringFormat={}{0:F1}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Far Clip" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding FarClip, StringFormat={}{0:F1}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Main Camera" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding IsMainCamera}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Antialiasing" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" SelectedItem="{Binding Antialiasing}" 
                                      ItemsSource="{Binding Source={local:EnumValues {x:Type components:AntialiasingMode}}}"
                                      Background="#333337" Foreground="White" Width="100"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Expander>
        </DataTemplate>
        
        <!-- ScriptComponent DataTemplate -->
        <DataTemplate DataType="{x:Type components:ScriptComponent}">
            <Expander IsExpanded="{Binding IsUIExpanded, Mode=TwoWay}" Margin="0,0,0,4">
                <Expander.Header>
                    <Grid Background="Transparent" PreviewMouseLeftButtonDown="ComponentHeader_DragSource_PreviewMouseLeftButtonDown" MouseMove="ComponentHeader_DragSource_MouseMove">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding ComponentName}" Foreground="#CCCCCC" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="✕" FontSize="10" Width="18" Height="18"
                                Background="Transparent" BorderThickness="0" Foreground="#888888"
                                ToolTip="Remove Component" Click="RemoveComponent_Click" Tag="{Binding}"/>
                    </Grid>
                </Expander.Header>
                <Border Background="#2D2D30" CornerRadius="0,0,3,3" Padding="8" Margin="0,4,0,0" x:Name="ScriptBorder" Tag="{Binding}" Loaded="ScriptComponent_Loaded">
                    <StackPanel x:Name="ScriptPropertiesPanel">
                        <TextBlock Text="Script" Foreground="#888888" FontSize="10" FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </Expander>
        </DataTemplate>
        
        <!-- LightComponent DataTemplate -->
        <DataTemplate DataType="{x:Type components:LightComponent}">
            <Expander IsExpanded="{Binding IsUIExpanded, Mode=TwoWay}" Margin="0,0,0,4">
                <Expander.Header>
                    <Grid Background="Transparent" PreviewMouseLeftButtonDown="ComponentHeader_DragSource_PreviewMouseLeftButtonDown" MouseMove="ComponentHeader_DragSource_MouseMove">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Light" Foreground="#CCCCCC" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="✕" FontSize="10" Width="18" Height="18"
                                Background="Transparent" BorderThickness="0" Foreground="#888888"
                                ToolTip="Remove Component" Click="RemoveComponent_Click" Tag="{Binding}"/>
                    </Grid>
                </Expander.Header>
                <Border Background="#2D2D30" CornerRadius="0,0,3,3" Padding="8" Margin="0,4,0,0">
                    <StackPanel>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Type" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" SelectedItem="{Binding LightType}" 
                                      ItemsSource="{Binding Source={local:EnumValues {x:Type components:LightType}}}"
                                      Background="#333337" Foreground="White" Width="100"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Intensity" Style="{StaticResource NumericLabel}" Tag="{Binding ElementName=LightIntensityTb}"/>
                            <TextBox x:Name="LightIntensityTb" Grid.Column="1" Text="{Binding Intensity, StringFormat={}{0:F2}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Range" Style="{StaticResource NumericLabel}" Tag="{Binding ElementName=LightRangeTb}"/>
                            <TextBox x:Name="LightRangeTb" Grid.Column="1" Text="{Binding Range, StringFormat={}{0:F1}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Spot Angle" Style="{StaticResource NumericLabel}" Tag="{Binding ElementName=LightAngleTb}"/>
                            <TextBox x:Name="LightAngleTb" Grid.Column="1" Text="{Binding SpotAngle, StringFormat={}{0:F1}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>
                        
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Temperature (K)" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding Temperature, StringFormat={}{0:F0}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>

                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Indirect Mult" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding IndirectMultiplier, StringFormat={}{0:F2}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>

                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Ambient Int" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding AmbientIntensity, StringFormat={}{0:F2}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Cast Shadows" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding CastShadows}" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Quality" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding Source={StaticResource ShadowQualityEnum}}" SelectedItem="{Binding Quality}" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Extra Shadow Props -->
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Strength" Style="{StaticResource NumericLabel}" Tag="{Binding ElementName=ShadowStrengthTb}"/>
                            <Slider Grid.Column="1" Value="{Binding ShadowStrength, Mode=TwoWay}" 
                                    Minimum="0" Maximum="1" TickFrequency="0.01" IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="ShadowStrengthTb" Grid.Column="2" Text="{Binding ShadowStrength, StringFormat={}{0:F2}}" Style="{StaticResource NumericTextBox}"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Bias" Style="{StaticResource NumericLabel}" Tag="{Binding ElementName=ShadowBiasTb}"/>
                            <TextBox x:Name="ShadowBiasTb" Grid.Column="1" Text="{Binding ShadowBias, StringFormat={}{0:F4}}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Resolution" Style="{StaticResource NumericLabel}" Tag="{Binding ElementName=ShadowResTb}"/>
                            <TextBox x:Name="ShadowResTb" Grid.Column="1" Text="{Binding ShadowResolution}" Style="{StaticResource NumericTextBox}" Width="80"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Expander>
        </DataTemplate>

        <!-- BoxColliderComponent DataTemplate -->
        <DataTemplate DataType="{x:Type components:BoxColliderComponent}">
            <Expander IsExpanded="{Binding IsUIExpanded, Mode=TwoWay}" Margin="0,0,0,4">
                <Expander.Header>
                    <Grid Background="Transparent" PreviewMouseLeftButtonDown="ComponentHeader_DragSource_PreviewMouseLeftButtonDown" MouseMove="ComponentHeader_DragSource_MouseMove">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Box Collider" Foreground="#CCCCCC" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="✕" FontSize="10" Width="18" Height="18"
                                Background="Transparent" BorderThickness="0" Foreground="#888888"
                                ToolTip="Remove Component" Click="RemoveComponent_Click" Tag="{Binding}"/>
                    </Grid>
                </Expander.Header>
                <Border Background="#2D2D30" CornerRadius="0,0,3,3" Padding="8" Margin="0,4,0,0">
                    <StackPanel>
                        <Grid Style="{StaticResource PropertyRow}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Is Trigger" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="1" IsChecked="{Binding IsTrigger}" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Center" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="X" Foreground="#FF6B6B" Style="{StaticResource AxisLabel}" Tag="{Binding ElementName=BoxCenterXTb}"/>
                                <TextBox x:Name="BoxCenterXTb" Text="{Binding CenterX, StringFormat={}{0:F2}, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericTextBox}"/>
                                <TextBlock Text="Y" Foreground="#6BCB77" Style="{StaticResource AxisLabel}" Margin="8,0,0,0" Tag="{Binding ElementName=BoxCenterYTb}"/>
                                <TextBox x:Name="BoxCenterYTb" Text="{Binding CenterY, StringFormat={}{0:F2}, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericTextBox}"/>
                                <TextBlock Text="Z" Foreground="#4D96FF" Style="{StaticResource AxisLabel}" Margin="8,0,0,0" Tag="{Binding ElementName=BoxCenterZTb}"/>
                                <TextBox x:Name="BoxCenterZTb" Text="{Binding CenterZ, StringFormat={}{0:F2}, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericTextBox}"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Size" Foreground="#AAAAAA" FontSize="11" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="X" Foreground="#FF6B6B" Style="{StaticResource AxisLabel}" Tag="{Binding ElementName=BoxSizeXTb}"/>
                                <TextBox x:Name="BoxSizeXTb" Text="{Binding SizeX, StringFormat={}{0:F2}, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericTextBox}"/>
                                <TextBlock Text="Y" Foreground="#6BCB77" Style="{StaticResource AxisLabel}" Margin="8,0,0,0" Tag="{Binding ElementName=BoxSizeYTb}"/>
                                <TextBox x:Name="BoxSizeYTb" Text="{Binding SizeY, StringFormat={}{0:F2}, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericTextBox}"/>
                                <TextBlock Text="Z" Foreground="#4D96FF" Style="{StaticResource AxisLabel}" Margin="8,0,0,0" Tag="{Binding ElementName=BoxSizeZTb}"/>
                                <TextBox x:Name="BoxSizeZTb" Text="{Binding SizeZ, StringFormat={}{0:F2}, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Expander>
        </DataTemplate>

        <!-- SphereColliderComponent DataTemplate -->
        <DataTemplate DataType="{x:Type components:SphereColliderComponent}">
            <Expander IsExpanded="{Binding IsUIExpanded, Mode=TwoWay}" Margin="0,0,0,4">
                <Expander.Header>
                    <Grid Background="Transparent" PreviewMouseLeftButtonDown="ComponentHeader_DragSource_PreviewMouseLeftButtonDown" MouseMove="ComponentHeader_DragSource_MouseMove">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Sphere Collider" Foreground="#CCCCCC" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="✕" FontSize="10" Width="18" Height="18"
                                Background="Transparent" BorderThickness="0" Foreground="#888888"
                                ToolTip="Remove Component" Click="RemoveComponent_Click" Tag="{Binding}"/>
                    </Grid>
                </Expander.Header>
