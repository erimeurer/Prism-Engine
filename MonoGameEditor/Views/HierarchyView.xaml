<UserControl x:Class="MonoGameEditor.Views.HierarchyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:core="clr-namespace:MonoGameEditor.Core"
             xmlns:local="clr-namespace:MonoGameEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.Resources>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:ObjectTypeToIconConverter x:Key="ObjectTypeToIconConverter"/>
        
        <!-- TreeViewItem Style -->
        <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="2,2,2,2"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>
                            <Border x:Name="Bd" 
                                    Background="Transparent" 
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="2"
                                    Margin="0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Expander -->
                                    <ToggleButton x:Name="Expander" 
                                                  Grid.Column="0"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Width="16" Height="16"
                                                  Background="Transparent"
                                                  BorderThickness="0">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border Background="Transparent" Padding="4">
                                                                <Path x:Name="arrow" 
                                                                      Data="M 0 0 L 4 4 L 0 8 Z" 
                                                                      Fill="#888888"
                                                                      HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="arrow" Property="Data" Value="M 0 0 L 8 0 L 4 4 Z"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    <!-- Content -->
                                    <ContentPresenter x:Name="PART_Header" 
                                                      Grid.Column="1"
                                                      ContentSource="Header" 
                                                      HorizontalAlignment="Stretch"/>
                                </Grid>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Margin="16,0,0,0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0078D7"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#3E3E42"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- GameObject Data Template -->
        <HierarchicalDataTemplate DataType="{x:Type core:GameObject}" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" Margin="2,0">
                <!-- Icon based on type -->
                <ContentControl Content="{Binding ObjectType, Converter={StaticResource ObjectTypeToIconConverter}}" 
                                Width="16" Height="16" Margin="0,0,6,0"/>
                <!-- Name -->
                <TextBlock Text="{Binding Name}" 
                           VerticalAlignment="Center"
                           Foreground="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}"/>
            </StackPanel>
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    
    <Grid Background="#252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#333337" BorderBrush="#3F3F46" BorderThickness="0,0,0,1" Padding="4,3">
            <StackPanel Orientation="Horizontal">
                <Button ToolTip="Create Empty GameObject" 
                        Command="{Binding CreateObjectCommand}"
                        Width="24" Height="24" Margin="0,0,2,0"
                        Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="Transparent" CornerRadius="3" Padding="4">
                                <Canvas Width="14" Height="14">
                                    <Line X1="7" Y1="2" X2="7" Y2="12" Stroke="#AAAAAA" StrokeThickness="2"/>
                                    <Line X1="2" Y1="7" X2="12" Y2="7" Stroke="#AAAAAA" StrokeThickness="2"/>
                                </Canvas>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#4E4E52"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button ToolTip="Delete Selected" 
                        Command="{Binding DeleteObjectCommand}"
                        Width="24" Height="24"
                        Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="Transparent" CornerRadius="3" Padding="4">
                                <Canvas Width="14" Height="14">
                                    <Line X1="2" Y1="7" X2="12" Y2="7" Stroke="#AAAAAA" StrokeThickness="2"/>
                                </Canvas>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#4E4E52"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- TreeView -->
        <TreeView Grid.Row="1" 
                  x:Name="HierarchyTree"
                  ItemsSource="{Binding RootObjects}"
                  Background="#252526"
                  BorderThickness="0"
                  Padding="4"
                  AllowDrop="True"
                  SelectedItemChanged="TreeView_SelectedItemChanged"
                  MouseDoubleClick="TreeView_MouseDoubleClick"
                  PreviewMouseLeftButtonDown="TreeView_PreviewMouseLeftButtonDown"
                  MouseMove="TreeView_MouseMove"
                  Drop="TreeView_Drop"
                  DragOver="TreeView_DragOver"
                  PreviewKeyDown="TreeView_PreviewKeyDown"
                  ItemContainerStyle="{StaticResource TreeViewItemStyle}"/>
    </Grid>
</UserControl>
