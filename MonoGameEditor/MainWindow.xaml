<Window x:Class="MonoGameEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dock="https://github.com/Dirkster99/AvalonDock"
        xmlns:dockThemes="clr-namespace:AvalonDock.Themes;assembly=AvalonDock.Themes.VS2013"
        xmlns:views="clr-namespace:MonoGameEditor.Views"
        xmlns:vm="clr-namespace:MonoGameEditor.ViewModels"
        xmlns:localConverters="clr-namespace:MonoGameEditor.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource WindowBackgroundBrush}"
        BorderThickness="0">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30" CornerRadius="0" GlassFrameThickness="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <localConverters:PlayColorConverter x:Key="PlayColorConverter"/>
        <localConverters:PlayIconConverter x:Key="PlayIconConverter"/>
        <localConverters:PauseColorConverter x:Key="PauseColorConverter"/>


        <Style x:Key="ToolButtonStyle" TargetType="{x:Type ButtonBase}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ButtonBase}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
             <Style.Triggers>
                <Trigger Property="ToggleButton.IsChecked" Value="True">
                     <Setter Property="Background" Value="#444444"/>
                     <Setter Property="Foreground" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- DataTemplate for Script Editor -->
        <DataTemplate DataType="{x:Type vm:ScriptEditorViewModel}">
            <views:ScriptEditorView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" /> <!-- Title Bar -->
            <RowDefinition Height="Auto" /> <!-- Menu -->
            <RowDefinition Height="40" /> <!-- Toolbar -->
            <RowDefinition Height="*" /> <!-- Content -->
            <RowDefinition Height="28" /> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="#333333">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" /> <!-- Icon -->
                <ColumnDefinition Width="*" /> <!-- Title -->
                <ColumnDefinition Width="Auto" /> <!-- Controls -->
            </Grid.ColumnDefinitions>

            <!-- Icon / Title -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="10,0,0,0">
                <!-- Keep Icon or colored text -->
                <TextBlock Text="{Binding WindowTitle}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#007ACC"/>
            </StackPanel>

            <!-- Window Controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button Content="0" Style="{StaticResource TitleBarButtonStyle}" FontFamily="Marlett" Click="OnMinimizeClick"/>
                <Button Content="1" Style="{StaticResource TitleBarButtonStyle}" FontFamily="Marlett" Click="OnMaximizeRestoreClick" x:Name="MaximizeButton"/>
                <Button Content="r" Style="{StaticResource CloseButtonStyle}" FontFamily="Marlett" Click="OnCloseClick"/>
            </StackPanel>
        </Grid>

        <!-- Menu Bar -->
        <Menu Grid.Row="1">
            <MenuItem Header="File">
                <MenuItem Header="New Project..." Command="{Binding NewProjectCommand}" />
                <MenuItem Header="Open Project..." Command="{Binding OpenProjectCommand}" />
                <Separator />
                <MenuItem Header="New Scene" Command="{Binding NewSceneCommand}" />
                <MenuItem Header="Open Scene" Command="{Binding OpenSceneCommand}" />
                <Separator />
                <MenuItem Header="Save" Command="{Binding SaveSceneCommand}" />
                <MenuItem Header="Save As..." Command="{Binding SaveSceneAsCommand}" />
                <Separator />
                <MenuItem Header="Build Settings" />
                <MenuItem Header="Build &amp; Run" />
                <Separator />
                <MenuItem Header="Exit" Click="OnCloseClick" />
            </MenuItem>
            <MenuItem Header="Edit" />
            <MenuItem Header="Assets" />
            <MenuItem Header="GameObject" />
            <MenuItem Header="Component" />
            <MenuItem Header="Window" />
            <MenuItem Header="Help" />
        </Menu>

            <!-- Toolbar -->
        <Grid Grid.Row="2" Background="#252526">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Tool Selection (Left) -->
            <!-- Tool Selection (Left) -->
            <!-- Floating Toolbar in SceneView replaced this -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="10,0" VerticalAlignment="Center">
                 <!-- Removed -->
            </StackPanel>

            <!-- Play Controls (Center) -->
            <Border Grid.Column="1" Background="#333337" CornerRadius="5" Margin="0,4" Padding="5,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding PlayCommand}" Width="40" Height="25" Margin="2,0" Style="{StaticResource ToolButtonStyle}" ToolTip="Play/Stop">
                        <Button.Content>
                            <TextBlock Text="{Binding IsPlaying, Converter={StaticResource PlayIconConverter}}" 
                                       FontSize="14" 
                                       Foreground="{Binding IsPlaying, Converter={StaticResource PlayColorConverter}}" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2,0,0,0"/>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding PauseCommand}" Width="40" Height="25" Margin="2,0" Style="{StaticResource ToolButtonStyle}" ToolTip="Pause">
                        <Button.Content>
                            <TextBlock Text="⏸" FontSize="14" Foreground="{Binding IsPaused, Converter={StaticResource PauseColorConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Docking Content -->
        <views:EditorLayoutView Grid.Row="3" DataContext="{Binding}"/>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{Binding Console.StatusColor}" BorderBrush="#3F3F46" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" Margin="8,0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Console.StatusText}" 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           FontSize="11"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
